<header class="bg-[#4F46E5] h-20 sticky top-0 z-50">
  <nav class="container mx-auto px-4 h-full">
    <div class="flex items-center justify-between h-full">
      <!-- Logo -->
      <a href="/" class="flex items-center gap-2 hover:opacity-80 transition-opacity">
        <div class="text-2xl font-bold text-white">NF</div>
        <div class="flex flex-col text-white text-xs font-semibold leading-tight">
          <span>NEW</span>
          <span>FOCUS</span>
        </div>
      </a>
      
      <!-- Navigation desktop -->
      <ul class="hidden md:flex items-center gap-6">
        <li><a href="/services" class="text-white hover:opacity-80 font-medium transition-opacity">Services</a></li>
        <li><a href="/projets" class="text-white hover:opacity-80 font-medium transition-opacity">Projets</a></li>
        <li><a href="/nos-outils-no-code" class="text-white hover:opacity-80 font-medium transition-opacity">Nos outils</a></li>
        <li><a href="#contact" class="text-white border border-white px-4 py-2 rounded-lg hover:bg-white hover:text-[#4F46E5] transition-all font-medium">Me contacter</a></li>
        <li><a href="#devis" class="bg-white text-[#4F46E5] px-6 py-2 rounded-lg font-semibold hover:bg-gray-100 transition-colors">Demander un devis</a></li>
      </ul>
      
      <!-- Bouton menu mobile -->
      <button class="md:hidden text-white p-2" id="mobile-menu-btn" aria-label="Menu" aria-expanded="false">
        <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 6h16M4 12h16M4 18h16"></path>
        </svg>
      </button>
    </div>
    
    <!-- Menu mobile -->
    <ul id="mobile-menu" class="md:hidden hidden mt-4 space-y-2 pb-4 border-t border-white/20 pt-4">
      <li><a href="/services" class="block py-2 text-white hover:opacity-80 font-medium transition-opacity">Services</a></li>
      <li><a href="/projets" class="block py-2 text-white hover:opacity-80 font-medium transition-opacity">Projets</a></li>
      <li><a href="/nos-outils-no-code" class="block py-2 text-white hover:opacity-80 font-medium transition-opacity">Nos outils</a></li>
      <li><a href="#contact" class="block py-2 text-white font-medium">Me contacter</a></li>
      <li><a href="#devis" class="block bg-white text-[#4F46E5] px-6 py-2 rounded-lg font-semibold text-center mt-4">Demander un devis</a></li>
    </ul>
  </nav>
</header>

<script>
  const menuBtn = document.getElementById('mobile-menu-btn');
  const mobileMenu = document.getElementById('mobile-menu');
  
  if (menuBtn && mobileMenu) {
    menuBtn.addEventListener('click', () => {
      const isHidden = mobileMenu.classList.contains('hidden');
      mobileMenu.classList.toggle('hidden');
      menuBtn.setAttribute('aria-expanded', isHidden ? 'true' : 'false');
    });
  }
</script>
